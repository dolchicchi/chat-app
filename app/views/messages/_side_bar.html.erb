<div class="side_bar">
  <div class="side_header">
    <div class="user_name">
      <%= link_to current_user.name,  edit_user_path(current_user), class: "user_edit"%>
    </div>
    <div class="room_create">
      <%=link_to 'チャットを作成する', new_room_path %>
    </div>
  </div>
  <div class="rooms">
      <% current_user.rooms.each do |room| %>
    <div class="room">
        <%= link_to room.name, room_messages_path(room) %>
    </div>
      <% end %>
  </div>
</div>