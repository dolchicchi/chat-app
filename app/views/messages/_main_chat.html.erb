<div class="main_chat">
  <div class="main_header">
    <div class="room_name">hogefuga</div>
    <div class="room_destroy">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
  <div class="messages">
    <div class="message">
      <div class="up_contents">
        <div class="message_user">Tom</div>
        <div class="message_created">
          2020/2/21(Web) 12:43:30
        </div>
      </div>
      <div class="down_contents">
        おはよう
      </div>
    </div>
    <div class="message">
      <div class="up_contents">
        <div class="message_user">Tom</div>
        <div class="message_created">
          2020/2/21(Web) 12:43:30
        </div>
      </div>
      <div class="down_contents">
        おはよう
      </div>
    </div>
  </div>
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form_input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
</div>